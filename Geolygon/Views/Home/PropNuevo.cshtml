 @model Geolygon.Models.ViewModels.AltaPropViewModel
@{
    ViewBag.Title = "New Properties";
}


<h2> @ViewBag.Title &nbsp;<span class="badge bg-secondary">  Nuevo Registro Propiedad</span></h2>


@using (Html.BeginForm("PropNuevo", "Home", FormMethod.Post))
{
<div class="row">
    <div class="col-md-12">
       
        <div>
            @Html.LabelFor(d => d.Name)
            @Html.TextBoxFor(d => d.Name, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Name, null, new { @class = "red" })
           

        </div>
      

        <div>
            @Html.LabelFor(d => d.Address)
            @Html.TextBoxFor(d => d.Address, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Address, null, new { @class = "red" })

        </div>
      
        <br />

        <div class="form-group" style="text-align:left;">

            <input  class="btn btn-success" type="submit"  value="Guardar"/>

        </div>

       

